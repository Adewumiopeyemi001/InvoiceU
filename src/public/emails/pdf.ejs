<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header img {
            width: 70px;
            height: 70px;
        }
        .company-logo img {
            display: block; /* Ensure the image behaves as a block element */
            margin: 0 auto; /* Center the image horizontally */
        }

        .company-logo h2 {
            margin-top: 5px; /* Adjust this value to reduce the gap */
        }

        .company-info, .client-info {
            margin: 10px 0; /* Adjusted to reduce space between sections */
        }

        .company-info p, .client-info p {
            margin: 5px 0; /* Reduce the space between lines in the paragraphs */
        }

        .company-info h3, .client-info h3 {
            margin-bottom: 10px; /* Reduce the space after the heading */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: right;
        }
        th {
            background-color: #f2f2f2;
        }
        .date {
            display: flex;
            text-align: center;
            flex-direction: row;
            align-items: flex-start;
            border-radius: 10px;
            background-color: aqua;
            color: white;
            padding: 5px 10px;
            font-weight: bold;
            width: 300px;

        }
        .total {
            font-weight: bold;
            font-size: 16px;
        }
        .thank-you {
            margin-top: 20px;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class = "company-logo">
            <img src="<%= logoUrl %>" alt="Company Logo">
        <h2><%= company.companyName %></h2>
        </div>
        <div class="company-info">
            <p><%= company.companyAddress %></p>
            <p><%= company.city %>, <%= company.state %> - <%= company.zipCode %></p>
        </div>
    </div>

    <div class="client-info">
        <h3>Billed To:</h3>
        <p><%= client.businessName %></p>
        <p><%= client.address %></p>
        <p><%= client.city %>, <%= client.country %> - <%= client.zipCode %></p>
    </div>
    <div class="date">
        <p><%= issueDate %></p>
        <p><%= dueDate %></p>
    </div>
    <table>
        <thead>
            <tr>
                <th>Item Description</th>
                <th>Qty</th>
                <th>Rate</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(function(item) { %>
                <tr>
                    <td><%= item.description %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.rate.toFixed(2) %></td>
                    <td>$<%= (item.quantity * item.rate).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="total">
        <p>Subtotal: $<%= (subtotal ? subtotal.toFixed(2) : '0.00') %></p>
        <p>Tax (10%): $<%= (tax ? tax.toFixed(2) : '0.00') %></p>
        <p>Total: $<%= (total ? total.toFixed(2) : '0.00') %></p>
    </div>

    <div class="thank-you">
        <p>Thank you for your business!</p>
    </div>
</body>
</html>
